{
   int i;
   int intersect = 0;
   struct maybe_point mp;
   for(i=0;i<num_spheres;i++)
   {
      mp = sphere_intersection_point(r,spheres[i]);
      if(mp.isPoint == 1)
      {
         intersect=1;
      }  
   }
   if(intersect == 0)
   {
      return 0;
   }
   else
   {
      return 1;
   }
}

